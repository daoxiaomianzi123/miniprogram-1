/* index.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.tabs {
  display: flex;
  background-color: #f5f5f5;
  padding: 10px 0;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 10px;
  cursor: pointer;
}

.tab.active {
  color: #1aad19;
  border-bottom: 2px solid #1aad19;
}

.content {
  flex: 1;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24px;
}
