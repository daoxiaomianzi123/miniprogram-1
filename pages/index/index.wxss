/**index.wxss**/
page {
    height: 100vh;
    display: flex;
    flex-direction: column;
    width: 100%;
}

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
}

.swiper-container {
    height: 300rpx;
    width: 100%;
    padding: 0 36rpx 0;
    margin-top: 30rpx;
    box-sizing: border-box; /* 明确设置 box-sizing */
}

.swiper-content {
    height: 300rpx;
    width: 100%;
}

.swiper-item {
    border-radius: 16rpx;
    height: 100%;
    width: 100%;
}

.swiperImg {
    width: 100%;
    height: 300rpx;
}

.tab-list {
    box-sizing: border-box;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-direction: row;
    flex-flow: wrap;
    padding: 15rpx 49rpx 0;
}

.tab-item {
    padding-top: 8rpx;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    margin-top: 23rpx;
    text-align: center;
    width: 25%;
    justify-content: center;
    align-items: center;
    font-size: 24rpx;
    color: #424242;
}

.tab-icon {
    width: 115rpx;
    height: 115rpx;
    margin: 0 auto;
}

.tab-item-active {
    background-color: #f5a623;
    color: white;
}

.tab-item-active:after {
    content: "";
    display: block;
    width: 100%;
}

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #aaa;
    width: 80%;
}

.userinfo-avatar {
    overflow: hidden;
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.usermotto {
    margin-top: 200px;
}

.avatar-wrapper {
    padding: 0;
    width: 56px !important;
    border-radius: 8px;
    margin-top: 40px;
    margin-bottom: 40px;
}

.avatar {
    display: block;
    width: 56px;
    height: 56px;
}

.nickname-wrapper {
    display: flex;
    width: 100%;
    padding: 16px;
    box-sizing: border-box;
    border-top: .5px solid rgba(0, 0, 0, 0.1);
    border-bottom: .5px solid rgba(0, 0, 0, 0.1);
    color: black;
}

.nickname-label {
    width: 105px;
}

.nickname-input {
    flex: 1;
}

.customer_service {
    padding:66rpx 0;
}

.customer_service text{
    font-size: 25rpx;
    color: #8D8D8D;
}
.customer_phone {
    display: flex;
    justify-content: center;
    align-items: center;
}

.customer_phone image {
    width: 23rpx;
    height: 23rpx;
}

.customer_phone text {
    line-height: 1;
    margin-left: 7rpx;
    font-size: 25rpx;
    color: #424242;
}
.customer_company{
    font-size: 25rpx;
    color: #8D8D8D;
    text-align: center;
}

